<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ping Pong Code</title>
    @Styles.Render("~/Content/admin")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <nav class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#pingpong-navbar-collapse" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("index","Posts")">CNP.v.0.1</a>
        </div>
        <div class="collapse navbar-collapse" id="pingpong-navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown @SelectedTab("Posts")">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Post <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("All Posts", "Index", "Posts", new { area = "Admin" }, new { })</li>
                        <li>@Html.ActionLink("Add New", "New", "Posts", new { area = "Admin" }, new { })</li>
                        <li>@Html.ActionLink("Categories", "Index", "Category", new { area = "Admin" }, new { })</li>
                        <li>@Html.ActionLink("Tags", "Index", "Tags", new { area = "Admin" }, new { })</li>
                    </ul>
                </li>
                <li class="@SelectedTab("page")">
                    @Html.ActionLink("Pages", "Index", "Pages", new { area = "Admin" }, new { })
                </li>
                <li class="@SelectedTab("users")">
                    @Html.ActionLink("Users", "Index", "Users", new { area = "Admin" }, new { })
                </li>

                <li class="@SelectedTab("Media")">
                    @Html.ActionLink("Media", "Index", "Media", new { area = "Admin" }, new { })
                </li>
                <li class="@SelectedTab("Appearance")">
                    @Html.ActionLink("Appearance", "Index", "Appearance", new { area = "Admin" }, new { })
                </li>
                <li class="dropdown @SelectedTab("Products")">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Products <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index", "Products")">Products</a></li>
                        <li><a href="@Url.Action("AddProduct", "Products")">Add Products</a></li>
                        <li><a href="@Url.Action("Categories", "Products")">Categories</a></li>
                        <li><a href="@Url.Action("Tags", "Products")">Tags</a></li>
                        <li><a href="@Url.Action("Attributes", "Products")">Attributes</a></li>
                    </ul>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Logout", "Logout", "Auth", new { area = "Admin" }, new { })
                </li>
            </ul>
        </div>
    </nav>
</div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - <a href="http://www.pingpongcode.com" target="_blank">pingpongcode.com</a></p>
        </footer>        
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/froms")
        @RenderSection("scripts", required: false)
        <script>
            //$('.dropdown').hover(function () {
            //    $('.dropdown-toggle', this).trigger('click');
            //});
        </script>
        <script src="~/Scripts/ckeditor/ckeditor.js"></script>
        <script src="~/Scripts/ckfinder/ckfinder.js"></script>
        <form class="hidden" id="anti-forgery-form">
            @Html.AntiForgeryToken()
        </form>
    </div>
</body>
</html>
@helper SelectedTab(string target)
{
if (!string.IsNullOrWhiteSpace(ViewBag.SelectedTab))
{
    if (ViewBag.SelectedTab.Equals(target))
    {
            @: active
        }
    }
}

